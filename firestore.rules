rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read and write to the "tracker" collection
    match /tracker/{document} {
      allow read, write: if request.auth != null;
    }
    
    // CRITICAL SECURITY: Sensitive history strictly for admin
    match /auth/adminPassword {
      allow read, write: if request.auth != null && request.auth.token.email == 'system@vape.com';
    }

    // PUBLIC STATUS: Non-sensitive document to check if password setup is required
    match /auth/userPasswordState {
      allow read, write: if request.auth != null;
    }

    // Login attempt logs (allows logging before user is authenticated)
    match /authAttempts/{document} {
      // Anyone can log an attempt; Only admin can read them
      allow create: if true;
      allow read: if request.auth != null && request.auth.token.email == 'system@vape.com';
    }

    // AI Configuration: Read by all, Write only by admin
    match /settings/ai_config {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'system@vape.com';
    }

    // AI Chat Logs: All users can log, only admin can read
    match /ai_chat_logs/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && request.auth.token.email == 'system@vape.com';
    }
  }
}
