rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read and write to the "tracker" collection
    match /tracker/{document} {
      allow read, write: if request.auth != null;
    }
    
    // CRITICAL SECURITY: Auth collection contains plaintext password history
    // Only admin@vape.com can access this sensitive data
    match /auth/{document} {
      // Only admin can read plaintext password logs and history
      allow read: if request.auth != null && request.auth.token.email == 'admin@vape.com';
      
      // Only admin can write (password changes, login attempts logging)
      allow write: if request.auth != null && request.auth.token.email == 'admin@vape.com';
    }
  }
}
